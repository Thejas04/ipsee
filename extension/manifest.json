{
  "manifest_version": 3,
  "name": "IPSEE",
  "version": "1.0",
  "description": "Privacy extension for analyzing cookies and ToS.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon64.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "cookies",
    "tabs",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_scripts/analyzeCookies.js", "content_scripts/analyzeToS.js", "content_scripts/highlight.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  }
}
